    <property name="tutorial.cmagent.deployed" value="cmagent/deployed" />
    <property name="tutorial.cmagent.synch" value="cmagent/synch" />
    <property name="tutorial.cmagent.migration" value="cmagent/migration" />
    <property name="tutorial.cmagent.groups" value="cmagent/groups" />
    <property name="tutorial.cmagent.webservice" value="cmagent/webservice" />

    <!-- Primality Test Tutorial -->
    <property name="tutorial.primes.sequential" value="primes/sequential" />
    <property name="tutorial.primes.distributed" value="primes/distributed" />
    <property name="tutorial.primes.distributedmw" value="primes/distributedmw" />

    <!-- Component Tutorial -->
	<property name="tutorial.components.adl.starter" value="components/adl/starter" />
    <property name="tutorial.components.adl.composite" value="components/adl/composite" />
    <property name="tutorial.components.adl.interfaces" value="components/adl/interfaces" />
    <property name="tutorial.components.adl.multicast" value="components/adl/multicast" />
	<property name="tutorial.components.adl.deployment" value="components/adl/deployment" />
	<property name="tutorial.components.api.starter" value="components/api/starter" />
	<property name="tutorial.components.api.composite" value="components/api/composite" />
	<property name="tutorial.components.api.interfaces" value="components/api/interfaces" />

</project>
